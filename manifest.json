{
  "manifest_version": 2,
  "name": "Blind-AID",
  "description": "A tool to remove redundant DOM information to help make websites usable for blind people",
  "version": "0.0.1",
  "author": "Madhu Priya",
  "background": {
     "scripts": ["background.js"],
     "persistent": false
   },
  "browser_action": {
      "default_icon": "band-aid.png",
      "default_title": "A band-aid for blind people",
      "default_popup": "popup.html"
  },
  "permissions": [
      "activeTab",
      "<all_urls>"
  ],
  "content_scripts":[{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-2.1.3.js", "content-script.js"]
  }]
}
